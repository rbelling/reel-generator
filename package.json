{
  "name": "reel-generator",
  "version": "0.0.1",
  "description": "Generate 30-seconds video reels from individual images",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "rm -rf build && tsc",
    "start": "node build",
    "dev": "nodemon | pino-pretty --colorize",
    "test": "run-p test:types test:unit",
    "test:unit": "NODE_ENV=test jest",
    "test:types": "tsc --noEmit",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:watch": "npm run test:unit -- --watch --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbelling/reel-generator.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "fastify",
    "instagram",
    "nodejs",
    "reel",
    "stopmotion",
    "typescript",
    "video processing",
    "video"
  ],
  "author": "Riccardo Bellingeri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rbelling/reel-generator/issues"
  },
  "homepage": "https://github.com/rbelling/reel-generator#readme",
  "devDependencies": {
    "@types/busboy": "^0.2.4",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^27.2.5",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "env-schema": "^2.0.1",
    "fastify": "^3.9.2",
    "fastify-multipart": "^5.0.2",
    "fastify-static": "^4.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "fluent-json-schema": "^2.0.3",
    "http-errors": "^1.8.0"
  }
}
